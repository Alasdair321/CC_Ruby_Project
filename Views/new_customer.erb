
<div class="">
  <a href="/leases/new-customer"><button type="button" name="button">Add Customer</button></a>
</div>
<div class="">
  <h3>All Customers</h3>
</div>
<div class="container-data">

  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Surname</th>
        <th>Phone</th>
        <th>Email</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% for customer in @customers do %>
      <tr>
        <td><%= customer.first_name%></td>
        <td><%= customer.surname%></td>
        <td><%= customer.contact_number%></td>
        <td><%= customer.contact_email%></td>
        <td>
          <button type="button" name="button" class="table-btn">
          <a href="/leases/all-customers/<%=customer.id%>/customer-leases">Leases</a>
          </button>
        </td>
        <td>
          <button type="button" name="button" class="table-btn">
          <a href="/leases/all-customers/<%=customer.id%>/edit">Edit</a>
          </button>
        </td>
        <td>
          <form action="/leases/all-customers/<%=customer.id%>/delete" method="POST">
          <input type="submit" value="Delete" name="button" class="table-btn">
        </form></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>

<div class="">
  <a href="/leases/new-lease"><button type="button" name="button">New Lease</button></a>
</div>
