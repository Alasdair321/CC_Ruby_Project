<div class="buttoncontainer">
  <div class="buttonposition">
    <a href="/leases/new-customer"><button type="button" name="button" class="quickbutton">ADD CUSTOMER</button></a>
  </div>
  <div class="buttonposition">
    <a href="/leases/new-lease"><button type="button" name="button" class="quickbutton">NEW LEASE</button></a>
  </div>
</div>
<div class="container-data">
  <h2>All Customers</h2>
  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Surname</th>
        <th>Phone</th>
        <th>Email</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% for customer in @customers do %>
      <tr>
        <td><%= customer.first_name%></td>
        <td><%= customer.surname%></td>
        <td><%= customer.contact_number%></td>
        <td><%= customer.contact_email%></td>
        <td>

            <a href="/leases/all-customers/<%=customer.id%>/customer-leases">
              <button type="button" name="button" class="table-btn">
                Leases
                </button>
              </a>

        </td>
        <td>
            <a href="/leases/all-customers/<%=customer.id%>/edit">
              <button type="button" name="button" class="table-btn">
              Edit
            </button>
            </a>
        </td>
        <td>
          <form onsubmit="return confirm('Are you sure you want to Delete?')" action="/leases/all-customers/<%=customer.id%>/delete" method="POST">
            <input type="submit" value="Delete" name="button" class="table-btn">
          </form></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <h3><i class="arrow up"></i> <a href="#top">Top</a></h3>


  </div>
