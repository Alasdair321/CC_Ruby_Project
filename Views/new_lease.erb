<div class="container-data">
  <h1>Create New Lease</h1>
  <form class="" action="/leases" method="post">
    <table>
      <tbody>
        <tr>
          <td><label for="customer-id">Customer: </label></td>
          <td>
            <select class="" name="customer_id" id="customer-id">
              <% for customer in @customers do %>
              <option value="<%= customer.id %>"><%= customer.format_name %></option>
              <% end %>
            </select>
          </td>
        </tr>
        <tr>
          <td><label for="equipment-id">Equipment: </label></td>
          <td>
            <select class="" name="equipment_id" id="equipment-id">
              <% for equipmentpiece in @equipment do %>
              <option value="<%= equipmentpiece.id %>"><%= equipmentpiece.type %> ; size: <%= equipmentpiece.size %></option>
              <% end %>
            </select>
          </td>
        </tr>
        <tr>
          <td><label for="start-date">Start Date: </label></td>
          <td><input type="date" name="start_date" id="start-date" value="<%=Date::today%>" min=<%=Date::today%>></td>
        </tr>
        <tr>
          <td><label for="end-date">End Date: </label></td>
          <td><input type="date" name="end_date" id="end-date" value="<%=Date::today + 7%>" min=<%=Date::today%>></td>
        </tr>
        <tr>
          <td><label for="number-leased">Number Requested: </label></td>
          <td><input type="number" name="number_leased" id="number-leased" value="1" min=1></td>
        </tr>
      </tbody>
    </table>
    <div class="">
      <input type="submit" name="" value="Create Lease">
    </div>
  </form>
</div>
